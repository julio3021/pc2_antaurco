@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #28a745;
        text-align: center;
        margin-bottom: 10px;
    }

    h2 {
        color: #28a745;
        text-align: center;
        margin-bottom: 20px;
    }

    .forgot-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .forgot-password-form {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .form-floating input {
        transition: border-color 0.3s;
    }

    .form-floating input:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    .btn-primary {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #218838;
    }

    .text-danger {
        text-align: center;
    }
</style>

<div class="forgot-password-container">
    <div class="col-md-4">
        <section>
            <form method="post" class="forgot-password-form">
                <h1>@ViewData["Title"]</h1>
                <h2>Ingresa tu Correo Electrónico:</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Restablecer Contraseña</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
